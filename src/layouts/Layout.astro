---
import { ViewTransitions } from 'astro:transitions';
import Nav from '@src/components/Nav.astro';
import { adapter } from 'astro-vtbot/animations/animation-style';

const moveAnimation = {
  old: {
    name: "move", // same name as the keyframe in layouts/Main
    duration: "0.7s",
    easing: "linear",
    fillMode: "forwards",
  },
  new: {
    name: "move",
    duration: "0.7s",
    easing: "linear",
    fillMode: "backwards",
  },
};

const move = {
  forwards: moveAnimation,
  backwards: moveAnimation,
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/assets/images/icon128.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Browser Extension Builder</title>
		<link rel="stylesheet" href="/src/config.css" />
		<ViewTransitions />
	</head>
	<body>
		<div id="background-blur" transition:animate={move}>
			<Nav />
			<slot />
		</div>
		<!-- <div id="container">
			<div id="wrapper">
				<slot />
			</div>
		</div>
		<div id="root"></div> -->
	</body>
</html>
<style is:global>
#container {
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	position: relative;
	min-width: 100%;
	height: 550px;
	z-index: 3;
}
	#wrapper {
		background-color: var(--element-color-elevation-1);
		width: 350px;
		height: var(--content-height);
		max-height: var(--content-height);
		border-radius: var(--border-radius);
		/* opacity: 0;
		animation: fade-in 800ms forwards; */
	}

	#background-blur {
		height: 600px;
		width: 400px;

		background-color: #000;
		background-size: 50px 50px;
		background-position: 50% 51px;
		background-image: linear-gradient(to right, var(--primary) 2px, transparent 2px), linear-gradient(to bottom, var(--primary) 1px, transparent 1px);	
	}

	/* This works */ 
	/* @keyframes move {
		from { transform: translateX(0px) translateY(0px);}
		to { transform: translateX(-40px) translateY(40px);}
	} */

	/* But this doesn't work */
	@keyframes move {
		from { background-position: 50% 51px; }
		to { background-position: -50% calc(50% + 26px); }
	}
</style>