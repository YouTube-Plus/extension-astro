---
import { ViewTransitions } from 'astro:transitions';
import Nav from '@src/components/Nav.astro';
import { adapter } from 'astro-vtbot/animations/animation-style';

const moveAnimation = {
  old: {
    name: "move", // same name as the keyframe in layouts/Main
    duration: "0.7s",
    easing: "linear",
    fillMode: "forwards",
  },
  new: {
    name: "move",
    duration: "0.7s",
    easing: "linear",
    fillMode: "backwards",
  },
};

const move = {
  forwards: moveAnimation,
  backwards: moveAnimation,
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/assets/images/icon128.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Browser Extension Builder</title>
		<link rel="stylesheet" href="/src/config.css" />
		<ViewTransitions />
	</head>
	<body>
		<Nav />
		<div id="container">
			<div id="wrapper">
				<slot />
			</div>
		</div>
		<div id="root"></div>
		<div id="background-blur" data-blur-animation="zoom" transition:persist="blur"></div>
	</body>
</html>
<style is:global>
#container {
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	position: relative;
	min-width: 100%;
	height: 550px;
	z-index: 2;
}
	#wrapper {
		background-color: var(--element-color-elevation-1);
		width: 350px;
		height: var(--content-height);
		max-height: var(--content-height);
		border-radius: var(--border-radius);
		/* opacity: 0;
		animation: fade-in 800ms forwards; */
	}

	#root {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 1;
		backdrop-filter: blur(3px);
	}

	#background-blur {
		position: absolute;
		top: 0px;
		z-index: -1;
		height: 600px;
		width: 400px;

		background-color: #000;
		background-size: 50px 50px;
		background-position: 50% 51px;
		background-image: linear-gradient(to right, var(--primary) 2px, transparent 2px), linear-gradient(to bottom, var(--primary) 1px, transparent 1px);	
	}

	#background-blur[data-blur-animation="zoom"] { animation: zoom 800ms forwards; }
	#background-blur[data-blur-animation="move_left"] { animation: move_left 800ms forwards; }
	#background-blur[data-blur-animation="move_right"] { animation: move_right 800ms forwards; }
	#background-blur[data-blur-animation="move_diag_NE"] { animation: move_diag_NE 800ms forwards; }
	#background-blur[data-blur-animation="move_diag_SW"] { animation: move_diag_SW 800ms forwards; }

	@keyframes zoom {
		from { background-size: 20px 20px; }
		to { background-size: 50px 50px; }
	}

	@keyframes move_left {
		from { background-position: -50% 51px; }
		to { background-position: 50% 51px; }
	}

	@keyframes move_right {
		from { background-position: 50% 51px; }
		to { background-position: -50% 51px; }
	}

	@keyframes move_diag_NE {
		from { background-position: 50% 51px; }
		to { background-position: -50% calc(50% + 26px); }
	}

	@keyframes move_diag_SW {
		from { background-position: -50% calc(50% + 26px); }
		to { background-position: 50% 51px; }
	}

</style>
<script>
	const background_blur = document.getElementById('background-blur');

	if (location.pathname === '/') {
		background_blur?.setAttribute('data-blur-animation', 'zoom');
	}

	document.addEventListener('astro:before-preparation', (e) => {
		if (e.to.pathname === '/settings') {
			background_blur?.setAttribute('data-blur-animation', 'move_diag_NE');
		}

		if (e.to.pathname === '/') {
			background_blur?.setAttribute('data-blur-animation', 'move_diag_SW');
		}
	});
</script>