---
import { ViewTransitions } from 'astro:transitions';

import Nav from '@src/components/Nav.astro';
import Background from '@src/components/Background.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/assets/images/icon128.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Browser Extension Builder</title>
		<link rel="stylesheet" href="/src/config.css" />
		<ViewTransitions fallback="swap" />
	</head>
	<body>
		<Background />
		<Nav />
		<!-- <div id="container">
			<div id="wrapper">
				<slot />
			</div>
		</div>
		<div id="root"></div> -->
	</body>
</html>
<style>
#container {
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	position: relative;
	min-width: 100%;
	height: 550px;
	z-index: 3;
}
	#wrapper {
		background-color: var(--element-color-elevation-1);
		width: 350px;
		height: var(--content-height);
		max-height: var(--content-height);
		border-radius: var(--border-radius);
		/* opacity: 0;
		animation: fade-in 800ms forwards; */
	}

	@keyframes fade-in {
		from { opacity: 0; }
		to { opacity: 1; }
	}
</style>
